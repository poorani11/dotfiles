[core]
    whitespace = trailing-space,space-before-tab
[apply]
    whitespace = fix
[user]
    name = Pankaj Singh
    email = psjinx@gmail.com
[github]
    user = psjinx
[format]
    signoff = true
[sendemail]
    smtpuser = psjinx@gmail.com
    suppresscc = all
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    smtpencryption = tls
    chainreplyto = false
[core]
    editor = vim
    excludesfile = /home/psjinx/.gitignore
[grep]
    lineNumber = true
[color]
    ui = auto
[imap]
    folder = "[Gmail]/Drafts"
    host = imaps://imap.gmail.com
    user = psjinx@gmail.com
    port = 993
    sslverify = false
[branch "master"]
    remote = origin
    merge = refs/heads/master
[instaweb]
    browser = iceweasel
    port = 4321
[web]
    browser = iceweasel
[cola]
    tabwidth = 4
[gui]
    editor = gvim
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    who = !echo \"== Commits by Author:\\n`git shortlog -s -n`\\n\"
    up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
[push]
	default = matching
